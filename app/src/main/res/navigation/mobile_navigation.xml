<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_live">

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.arpadfodor.android.paw_scanner.views.HistoryFragment"
        android:label="@string/title_history"
        tools:layout="@layout/history_fragment" >
        <action
            android:id="@+id/action_navigation_history_to_navigation_load"
            app:destination="@id/navigation_load"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_navigation_history_to_navigation_live"
            app:destination="@id/navigation_live"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/navigation_live"
        android:name="com.arpadfodor.android.paw_scanner.views.CameraFragment"
        android:label="@string/title_home"
        tools:layout="@layout/camera_fragment" >
        <action
            android:id="@+id/action_navigation_live_to_navigation_history"
            app:destination="@id/navigation_history"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_navigation_live_to_navigation_load"
            app:destination="@id/navigation_load"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/navigation_load"
        android:name="com.arpadfodor.android.paw_scanner.views.LoadFragment"
        android:label="@string/title_load"
        tools:layout="@layout/load_fragment" >
        <action
            android:id="@+id/action_navigation_load_to_navigation_history"
            app:destination="@id/navigation_history"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_navigation_load_to_navigation_live"
            app:destination="@id/navigation_live"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

</navigation>